
### 2. 🔧 tiktokbot.sh (FILE UTAMA)
```bash
#!/bin/bash

# TikTok Bot - Main Script
# Created for Termux

# Warna untuk output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Konfigurasi
CONFIG_FILE="config.sh"
SESSION_FILE="session.txt"
HISTORY_FILE="history.log"

# Load konfigurasi
source $CONFIG_FILE

# Fungsi log
log_action() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" >> $HISTORY_FILE
}

# Banner
clear
echo -e "${GREEN}"
echo "╔════════════════════════════════╗"
echo "║    TIKTOK BOT - TERMUX        ║"
echo "║     Created for Education      ║"
echo "╚════════════════════════════════╝"
echo -e "${NC}"

# Cek dependencies
check_dependencies() {
    local deps=("curl" "wget" "python" "git")
    for dep in "${deps[@]}"; do
        if ! command -v $dep &> /dev/null; then
            echo -e "${RED}Error: $dep tidak terinstall${NC}"
            echo -e "${YELLOW}Jalankan ./install.sh terlebih dahulu${NC}"
            exit 1
        fi
    done
}

# Menu utama
main_menu() {
    while true; do
        clear
        echo -e "${BLUE}╔════════════════════════════════╗${NC}"
        echo -e "${BLUE}║         MENU UTAMA BOT         ║${NC}"
        echo -e "${BLUE}╠════════════════════════════════╣${NC}"
        echo -e "${BLUE}║${NC} 1. ${GREEN}Bot Salin Tautan${NC}           ${BLUE}║${NC}"
        echo -e "${BLUE}║${NC} 2. ${GREEN}Bot Follow Akun${NC}            ${BLUE}║${NC}"
        echo -e "${BLUE}║${NC} 3. ${GREEN}Bot Like Video${NC}             ${BLUE}║${NC}"
        echo -e "${BLUE}║${NC} 4. ${GREEN}Bot View Video${NC}             ${BLUE}║${NC}"
        echo -e "${BLUE}║${NC} 5. ${YELLOW}Settings${NC}                   ${BLUE}║${NC}"
        echo -e "${BLUE}║${NC} 6. ${RED}Exit${NC}                        ${BLUE}║${NC}"
        echo -e "${BLUE}╚════════════════════════════════╝${NC}"
        echo ""
        read -p "Pilih menu [1-6]: " choice

        case $choice in
            1)
                ./modules/copy_link.sh
                ;;
            2)
                ./modules/follower.sh
                ;;
            3)
                ./modules/like.sh
                ;;
            4)
                ./modules/view.sh
                ;;
            5)
                show_settings
                ;;
            6)
                echo -e "${GREEN}Terima kasih!${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}Pilihan tidak valid!${NC}"
                sleep 1
                ;;
        esac
        read -p "Tekan Enter untuk melanjutkan..."
    done
}

show_settings() {
    clear
    echo -e "${YELLOW}╔════════════════════════════════╗${NC}"
    echo -e "${YELLOW}║           SETTINGS             ║${NC}"
    echo -e "${YELLOW}╠════════════════════════════════╣${NC}"
    echo -e "${YELLOW}║${NC} 1. Lihat History               ${YELLOW}║${NC}"
    echo -e "${YELLOW}║${NC} 2. Hapus Session               ${YELLOW}║${NC}"
    echo -e "${YELLOW}║${NC} 3. Kembali                     ${YELLOW}║${NC}"
    echo -e "${YELLOW}╚════════════════════════════════╝${NC}"
    
    read -p "Pilih [1-3]: " setting_choice
    case $setting_choice in
        1)
            echo -e "\n${GREEN}History Log:${NC}"
            tail -20 $HISTORY_FILE
            ;;
        2)
            rm -f $SESSION_FILE
            echo -e "${GREEN}Session berhasil dihapus${NC}"
            ;;
        3)
            return
            ;;
    esac
}

# Main execution
check_dependencies
main_menu
